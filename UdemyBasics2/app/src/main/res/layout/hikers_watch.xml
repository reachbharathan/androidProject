<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HikersWatch">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/image"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Hiker's Watch"
        android:gravity="center"
        android:textColor="#000000"
        android:padding="40dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lattitude"
        android:layout_marginLeft="30dp"
        android:layout_above= "@+id/longitude"
        android:textColor="#000000"
        android:textSize="20sp"
        android:padding="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/longitude"
        android:layout_marginLeft="30dp"
        android:layout_above="@+id/attitude"
        android:textColor="#000000"
        android:textSize="20sp"
        android:padding="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/attitude"
        android:layout_marginLeft="30dp"
        android:layout_above="@+id/accuracy"
        android:textColor="#000000"
        android:textSize="20sp"
        android:padding="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accuracy"
        android:layout_marginLeft="30dp"
        android:layout_centerVertical="true"
        android:textColor="#000000"
        android:textSize="20sp"
        android:padding="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/accuracy"
        android:textColor="#000000"
        android:textSize="20sp"
        android:padding="10dp"
        />


</RelativeLayout>